@using Repairs.Models
@model Repairs.ViewModels.ExtraQuestionsViewModel

<div class="columns">
    <div class="column is-12">

        <section class="section">
            <h1 class="title">Report a repair</h1>
            <p class="subtitle">A summary of your repair report.</p>
        </section>

        <div class="card is-shady">
            <header class="card-header">
                <p class="card-header-title"> Here are the details you have submitted </p>
                <a class="card-header-icon">
                    <span class="icon"> <i class="fa fa-angle-down"></i> </span>
                </a>
            </header>
            <div class="card-content">

                <div class="content">
                    <div class="field">
                        <label class="label">Task Category</label>
                        <p class="control">
                            @Model.TaskCategory
                        </p>
                    </div>

                    <div class="field">
                        <label class="label">Task Sub Category</label>
                        <p class="control">
                            @Model.TaskSubCategory
                        </p>
                    </div>

                    <div class="field">
                        <label class="label">Task</label>
                        <p class="control">
                            @Model.Task
                        </p>
                    </div>

                    <div class="field">
                        <label class="label">Task Code</label>
                        <p class="control">
                            @Model.TaskCode
                        </p>
                    </div>

                    <div class="field">
                        <label class="label">@Model.Question1</label>
                        <p class="control">
                            @Model.Answer1
                        </p>
                    </div>

                    <div class="field">
                        <label class="label">@Model.Question2</label>
                        <p class="control">
                            @Model.Answer2
                        </p>
                    </div>

                    <div class="field">
                        <label class="label">@Model.Question3</label>
                        <p class="control">
                            @Model.Answer3
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

