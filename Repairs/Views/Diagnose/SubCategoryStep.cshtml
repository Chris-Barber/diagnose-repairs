@using Repairs.Models
@model Repairs.ViewModels.SubCategoryViewModel
<hr />

<div class="columns">
    
    <div class="column is-6">
        @using (Ajax.BeginForm("SubCategoryStep", "Diagnose", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "TaskStep", OnSuccess = "highlightSelectedFormElement('SubCategoryStep', data, 'TaskStepForm')" }, new { @id = "SubCategoryStepForm", @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.HiddenFor(x => Model.TaskCategory)
                @foreach (var taskSubCategory in Model.SubCategories)
                {
                    <div>
                        <label>
                            <a class="button is-fullwidth tag__custom"> @taskSubCategory.Title </a>
                            @Html.RadioButtonFor(m => taskSubCategory.Title, taskSubCategory.Title)
                        </label>
                    </div>
                }
            </div>
        }
    </div>

</div>
